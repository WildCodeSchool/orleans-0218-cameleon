{% extends 'main/body.html.twig' %}
{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" media="screen" href="assets/css/gallery.css">
{% endblock %}
{% block content %}
    <section class="gallery-page">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 text-center">
                    <h2>Galerie</h2>
                </div>
            </div>
            <div class="row">
            {% for picture in pictures %}
                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 img-container">
                        <a data-toggle="modal" data-target="#galleryModal{{ loop.index }}">
                            <img class="image-responsive" src="{{ picture.path}} " alt="{{ picture.alt }}">
                        </a>
                    </div>
                <div class="modal" id="galleryModal{{ loop.index }}" tabindex="-1" role="dialog">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                <img src="{{ picture.path }}" alt="{{ picture.alt }}">
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}