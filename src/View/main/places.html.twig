{% extends 'main/body.html.twig' %}
{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" media="screen" href="assets/css/places.css">
{% endblock %}
{% block content %}
    {{ parent() }}
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <h2>Lieux</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            {% for place in places %}
                {% if place.adress_day or place.adress_evening %}
                    <div class="day">
                        <h3>
                        {% if place.day == 1 %}
                            Lundi
                        {%  elseif place.day == 2 %}
                            Mardi
                        {%  elseif place.day == 3 %}
                            Mercredi
                        {%  elseif place.day == 4 %}
                            Jeudi
                        {%  elseif place.day == 5 %}
                            Vendredi
                        {%  elseif place.day == 6 %}
                            Samedi
                        {%  else %}
                            Dimanche
                        {% endif %}
                        </h3>
                    </div>
                    <div><span class="hour">12h-14h :</span> {{ place.adress_day }}</div>
                    <div><span class="hour">19h-21h :</span> {{ place.adress_evening }}</div>
                {% endif %}
            {% endfor %}
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <img src="assets/images/image.jpg" class="img-responsive">
        </div>
    </div>
{% endblock %}
