{% extends '/admin/body.html.twig' %}
{% block content %}
    <section id="menu">

        <h3>Produits</h3>

        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Catégorie</th>
                <th>Produits</th>
                <th>Prix</th>
                <th>Ingredients</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for foods in foodCategories %}
                {% for food in foods.produits %}
                    <tr>
                        <td>{{ food.categoryName }}</td>
                        <td>{{ food.foodName }}</td>
                        <td>{{ food.price }}€</td>
                        <td>{{ food.ingredients }}</td>
                        <td>
                            <a href="/admin/menu/showProduct/{{ food.foodId }}">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        </td>
                        <td>
                            <form action="/admin/menu/deleteProduct" method="post">
                                <input type="hidden" name="id" value="{{ food.foodId }}">
                                <input type="submit" class="btn btn-danger" value="Supprimer">
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            {% endfor %}
            <tr>
                <td></td>
                <td>Nouveau produit</td>
                <td></td>
                <td></td>
                <td></td>
                <td>
                    <a type="button" class="btn btn-success" href="/admin/menu/showNewProduct">Ajouter</a>
                </td>
            </tr>
            </tbody>
        </table>

        <h3>Categories</h3>

        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Catégories</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for key,category in foodCategories %}
                <tr>
                    <td>
                        {{ category.name }}</td>
                    <td>
                        <a href="/admin/menu/showCategory/{{ key }}">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                    </td>
                    <td>
                        <form action="/admin/menu/deleteCategory" method="post">
                            <input type="hidden" name="id" value="{{ key }}">
                            <input type="submit" class="btn btn-danger" value="Supprimer"
                                    {% if category.deletable == false %}
                                disabled="disabled"
                                data-toggle="tooltip"
                                data-placement="right"
                                title="Une catégorie doit être vide pour être supprimée"
                                    {% endif %}>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            <tr>
                <td>Nouvelle catégorie</td>
                <td></td>
                <td><a href="/admin/menu/showNewCategory" type="button" class="btn btn-success">Ajouter</a></td>
            </tr>
            </tbody>
        </table>
    </section>
{% endblock %}