{% extends '/admin/body.html.twig' %}
{% block content %}
    <div id="company" class="tab-pane section-admin">
        <section id="company container">
            <div class="row">
                <div class="text-center">
                    <h3>Information de l'entreprise</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <form action="/admin/company/edit" method="POST">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="panel panel-theme">
                                    <div class="panel-heading">Information</div>
                                    <div class="panel-body">
                                        <div class="col-xs-12 col-sm-6">
                                            <input name="id" type="hidden" value="{{ company.id }}"/>
                                            <div class="form-group">
                                                <label for="phone"><span
                                                            class="title_admin_comp">Numero de telephone :</span></label>
                                                <input class="form-control" type="tel" id="phone"
                                                       name="phone" value="{{ company.phone }}"/>
                                            </div>
                                            <div class="form-group">
                                                <label for="facebook"><span
                                                            class="title_admin_comp">Facebook :</span></label>
                                                <input class="form-control" type="url" id="facebook"
                                                       name="facebook" value="{{ company.facebook }}"/>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-6">
                                            <div class="form-group">
                                                <label for="tweeter"><span
                                                            class="title_admin_comp">Twitter :</span></label>
                                                <input class="form-control" type="url" id="tweeter"
                                                       name="tweeter" value="{{ company.tweeter }}"/>
                                            </div>
                                            <div class="form-group">
                                                <label for="instagram"><span
                                                            class="title_admin_comp">Instagram :</span></label>
                                                <input class="form-control" type="url" id="instagram"
                                                       name="instagram" value="{{ company.instagram }}"/>
                                            </div>
                                        </div>
                                        <div class="col-xs-12">
                                            <div class="form-group">
                                                <label for="concept"><span
                                                            class="title_admin_comp">Concept :</span></label>
                                                <textarea class="form-control" id="concept"
                                                          name="concept">{{ company.concept }}</textarea>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 text-center">
                                            <input type="submit" value="Valider" class="btn btn-primary">
                                        </div>
                                    </div>
                                </div>
                                <div class="panel panel-theme">
                                    <div class="panel-heading">Mentions LÃ©gales</div>
                                    <div class="panel-body">
                                        <div class="col-xs-12">
                                            <div class="form-group">
                                                <label for="mentions_legales"><span
                                                            class="title_admin_comp">Mentions legales :</span></label>
                                                <textarea class="form-control" id="mentions_legales"
                                                          name="mentions_legales">{{ company.mentions_legales }}</textarea>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 text-center">
                                            <input type="submit" value="Valider" class="btn btn-primary">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
{% endblock %}