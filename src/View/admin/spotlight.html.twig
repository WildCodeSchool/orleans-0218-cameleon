{% extends '/admin/body.html.twig' %}
{% block content %}
    <div id="spotlightAdmin" class="tab-pane section-admin">
        <section>
            <div class="tab-content">
                <div class="row">
                    <div class="col-xs-12 text-center">
                        <h3>En lumière</h3>
                    </div>
                </div>

                    <form action="/admin/editspotlight" class="form-group" method="POST" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-xs-6">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <label for="file">Image : </label>
                                        <input type="file" class="form-control" name="photo" id="photo" placeholder="">
                                    </div>
                                    <div class="col-xs-12">
                                        <label for="alt">Description de l'image :</label>
                                        <input type="text" class="form-control" name="alt" value="{{ spotlight.alt }}">
                                    </div>
                                    <div class="col-xs-12">
                                            <a class="thumbnail">
                                                <img src="/{{ spotlight.photo }}" alt="{{ spotlight.alt }}">
                                            </a>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-xs-6">
                                <label for="spotlight">En lumière :</label>
                                <textarea id="spotlight-text" name="text" class="form-control" rows="12" cols="30">
                                    {{ spotlight.text }}
                                </textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <input type="hidden" name="id" value="{{ spotlight.id }}">
                                <input type="submit" value="Valider" class="btn btn-primary form-control">
                            </div>
                        </div>
                    </form>
                </div>
        </section>
    </div>
{% endblock %}