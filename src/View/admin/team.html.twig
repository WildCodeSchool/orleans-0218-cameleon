{% extends '/admin/body.html.twig' %}
{% block content %}
    <div class="container ">
        <section id="team">
            <h1 class="text-center">L'équipe</h1>
                <div class="row">
                    <form   action="/admin/team/edit" method="post" enctype="multipart/form-data" >
                        <div class="personne col-sm-4 col-md-5 form-group" >
                            <h3>Personne 1</h3>
                            <div class="thumbnail text-center col-md-4">
                                <img src="{{ team1.picture }}" alt="{{ team1.pictureDescription }}">
                            </div>
                            <div class="col-md-6 ">
                                <input class="small " type="file" name="picture" />
                                <input type="hidden" name="id" value="1">
                                <label class="small" for="name">Prénom :</label>
                                <input type="text" name ="name" class="form-control" value="{{ team1.name }}"pattern=".{2,}" />
                            </div>
                            <div class="col-md-6 ">
                                <label class="small" for="imagename">Description de l'image:</label>
                                <input name="pictureDescription" class="form-control" value="{{ team1.pictureDescription }}">
                            </div>
                            <div class="col-md-12">
                                <label class="small " for="description">Description:</label>
                                <textarea class="form-control" rows="5" name="description">{{ team1.description }}</textarea>
                            </div>
                            <div class="form-group text-center col-md-12 ">
                                <button type="submit" name="personne" class="btn btn-success btn-lg btn-block ">Valider</button>
                            </div>
                        </div>
                    </form>
                    <form   action="/admin/team/edit" method="post" enctype="multipart/form-data" >
                        <div class="personne col-sm-4 col-sm-offset-4 col-md-5 col-md-offset-2 form-group" >
                            <h3>Personne 2</h3>
                            <div class="thumbnail text-center col-md-4">
                                <img src="{{ team2.picture }}"alt="{{ team2.pictureDescription }}">
                            </div>
                            <div class="col-md-6 ">
                                <input class="small" type="file" name="picture"/>
                                <input type="hidden" name="id" value="2">
                                <label class="small" for="name">Prénom :</label>
                                <input type="text" name="name" class="form-control" value="{{ team2.name }}" pattern=".{2,}"/>
                            </div>
                            <div class="col-md-6 ">
                                <label class="small" for="imagename">Description de l'image:</label>
                                <input name="pictureDescription" class="form-control" value="{{ team2.pictureDescription }}">
                            </div>
                            <div class="col-md-12">
                                <label class="small" for="description">Description:</label>
                                <textarea class="form-control" rows="5" name="description" >{{ team2.description }}</textarea>
                            </div>
                            <div class="form-group text-center col-md-12 ">
                                <button type="submit" name="personne" class="btn btn-success btn-lg btn-block">Valider</button>
                            </div>
                        </div>
                    </form>
                </div>
        </section>
    </div>
{% endblock %}