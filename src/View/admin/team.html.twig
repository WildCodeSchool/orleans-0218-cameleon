{% extends '/admin/body.html.twig' %}
{% block content %}
    <div class="container ">
        <section id="team">
            <h1 class="text-center">L'équipe</h1>
            <form   action="/admin/team/edit" method="post" enctype="multipart/form-data" >
                <div class="row">
                    <div class="personne col-sm-4 col-md-5 form-group" >
                        <h3>Personne 1</h3>
                        <div class="thumbnail text-center col-md-4">
                            <img src="{{ team1.picture }}" alt="{{ team1.pictureDescription }}">
                        </div>
                        <div class="col-md-6 ">
                            <input class="small " type="file" name="picture1" />
                            <label class="small" for="name">Prénom :</label>
                            <input type="text" name ="name1" class="form-control" value="{{ team1.name }}"pattern=".{2,}" />
                        </div>
                        <div class="col-md-6 ">
                            <label class="small" for="imagename">Description de l'image:</label>
                            <input name="pictureDescription1" class="form-control" value="{{ team1.pictureDescription }}">
                        </div>
                        <div class="col-md-12">
                            <label class="small " for="description">Description:</label>
                            <textarea class="form-control" rows="3" name="description1">{{ team1.description }}</textarea>
                        </div>
                    </div>
                    <div class="personne col-sm-4 col-sm-offset-4 col-md-5 col-md-offset-2 form-group" >
                        <h3>Personne 2</h3>
                        <div class="thumbnail text-center col-md-4">
                            <img src="{{ team2.picture }}"alt="{{ team2.pictureDescription }}">
                        </div>
                        <div class="col-md-6 ">
                            <input class="small" type="file" name="picture2"/>
                            <label class="small" for="name">Prénom :</label>
                            <input type="text" name ="name2" class="form-control" value="{{ team2.name }}" pattern=".{2,}"/>
                        </div>
                        <div class="col-md-6 ">
                            <label class="small" for="imagename">Description de l'image:</label>
                            <input name="pictureDescription2" class="form-control" value="{{ team2.pictureDescription }}">
                        </div>
                        <div class="col-md-12">
                            <label class="small" for="description">Description:</label>
                            <textarea class="form-control" rows="3" name="description2" >{{ team2.description }}</textarea>
                        </div>
                    </div>
                </div>
                <div class="form-group text-center">
                    <button type="submit"name="upload" class="btn btn-success">Valider</button>
                </div>
            </form>
        </section>
    </div>
{% endblock %}