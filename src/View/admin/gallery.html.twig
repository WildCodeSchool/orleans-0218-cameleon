{% extends '/admin/body.html.twig' %}
{% block content %}
    <section class="gallery-admin">
        <div class="container">
            <div class="jumbotron">
                <h3>Gestion de la galerie</h3>
                <form action="/admin/gallery/insert" method="post" enctype="multipart/form-data" class="form-inline text-center">
                    <div class="form-group">
                        <label for="file">Fichier(s)</label>
                        <input type="file" class="form-control" name="file" id="file" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="alt">Alt</label>
                        <input type="text" class="form-control" name="alt" id="alt" placeholder="">
                    </div>
                    <button type="submit" name="submit" class="btn btn-primary">Envoyer</button>
                </form>
            </div>

            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Images</th>
                    <th class="text-right">Supprimer</th>
                </tr>
                </thead>
                <tbody>
                {% for picture in pictures %}
                    <tr>
                        <td><img class="img-container" src="../{{ picture.path }}" alt="{{ picture.alt }}"></td>
                        <td>
                            <form action="/admin/gallery/delete/" method="post" class="text-right">
                                <input type="hidden" name="id" value="{{ picture.id }}">
                                <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>
{% endblock %}