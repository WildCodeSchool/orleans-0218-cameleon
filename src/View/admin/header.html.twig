{% extends '/admin/body.html.twig' %}
{% block content %}
    <div id="header" class="tab-pane section-admin">
        <section>
            <div class="tab-content">
                <div class="row">
                    <div class="col-xs-12 text-center">
                        <h3>Message d'alerte</h3>
                    </div>

                    <form action="/admin/header/editAlert" class="form-horizontal" method="POST">
                        <div class="col-xs-12 col-sm-2">
                            <label for="activate">Activer</label>
                            <input type="checkbox" id="activate" name="activated" {% if alert.activated == 1 %} checked {% endif %} class="form-check-input">
                        </div>
                        <div class="form-group col-xs-12 col-sm-8">
                            <input id="alert" type="text" maxlength="100" name="alert" class="form-control" value="{{ alert.alert }}" placeholder="Message d'urgence">
                        </div>
                        <div class="col-xs-12 col-sm-2">
                            <input type="submit" value="Valider" class="btn btn-primary" class="form-control">
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
{% endblock %}