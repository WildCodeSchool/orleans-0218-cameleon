{% extends 'admin/body.html.twig' %}

{% block content %}
    {% if notification is defined %}
        <div class="container-fluid notification text-center">
            <div class="row">
                <div class="alert alert-{{ notification.type }}" role="alert">
                    {{ notification.message }}
                </div>
            </div>
        </div>
    {% endif %}

    <header class="container">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header page-scroll">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse navbar-ex1-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a data-toggle="tab" href="#entreprise">Entreprise</a></li>
                        <li><a data-toggle="tab" href="#header">Présentation</a></li>
                        <li><a data-toggle="tab" href="#galerie">Galerie</a></li>
                        <li><a data-toggle="tab" href="#lieux">Où nous trouver</a></li>
                        <li><a data-toggle="tab" href="#menus">Menus</a></li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <footer class="container admin-footer">
        <div class="row">
            <div class="tab-content">
                <div id="entreprise" class="tab-pane fade in active section-admin">
                    {# Formulaire Entreprise (concept, reseaux sociaux, telephone) #}
                </div>
                <div id="header" class="tab-pane section-admin">
                    {# Formulaire header (slider, alerte, en lumiere) #}
                </div>
                <div id="galerie" class="tab-pane section-admin">
                    {# Formulaire menus (galerie) #}
                </div>
                <div id="lieux" class="tab-pane section-admin">
                    {# Formulaire Lieux #}
                    {% include 'admin/place.html.twig' %}
                </div>
                <div id="menus" class="tab-pane section-admin">
                    {# Formulaire menus #}
                </div>
            </div>
        </div>
    </footer>
{% endblock %}
