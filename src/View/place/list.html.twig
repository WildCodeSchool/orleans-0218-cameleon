{% extends 'main/body.html.twig' %}
{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css"
          integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ=="
          crossorigin=""/>
    <link rel="stylesheet" media="screen" href="assets/css/place.css">
{% endblock %}
{% block content %}
    {{ parent() }}
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <h2>Lieux</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            {% for place in places %}
                {% if place.adress_day or place.adress_evening %}
                    <div class="day">
                        <h3>
                            {{ place.day }}
                        </h3>
                    </div>
                    <div>
                        <span class="hour">12h-14h :</span>
                        <span id="{{ place.day }}_12h-14h" data="{{ place.coord_day }}" class="marker">{{ place.adress_day }}</span>
                    </div>
                    <div>
                        <span class="hour">19h-21h :</span>
                        <span id="{{ place.day }}_19h-21h" data="{{ place.coord_evening }}" class="marker">{{ place.adress_evening }}</span>
                        </div>
                {% endif %}
            {% endfor %}
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <div id="map"></div>
        </div>
    </div>
{% endblock %}
{% block javascript %}
    {{ parent()}}
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js"
        integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw=="
        crossorigin=""></script>
    <script src="assets/js/place.js"></script>
{% endblock %}